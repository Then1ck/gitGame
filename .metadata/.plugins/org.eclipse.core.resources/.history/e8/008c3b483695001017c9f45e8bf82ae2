package camera;

import java.awt.Graphics2D;

import entities.Player;

public class Camera {
	private Player p1;
	private int offsetX, offsetY;
	private int HalfWidth=640, HalfHeight=360;
	
	public Camera(Player P1) {
		p1 = P1;
		offsetX = HalfWidth;
		offsetY = HalfHeight;
	}
	
	public void camChase() {
		offsetX = HalfWidth - p1.getLocX();
		offsetY = HalfHeight - p1.getLocX();
	}
	
	public void  setCam(Graphics2D g2) {
		g2.translate(offsetX, offsetY);
	}
}
