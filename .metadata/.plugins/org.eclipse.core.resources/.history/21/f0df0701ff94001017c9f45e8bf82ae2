package terrain;

import java.awt.Graphics2D;

import entities.Entities;

public class Floor {
	private int left, right, y;

	public Floor(int Left, int Right, int Y) {
		left = Left;
		right = Right;
		y = Y;
	}
	
	public boolean lands(Entities nt) {
		if(nt.getLocX() > right || nt.getLocX() + nt.getWidth() < left)
			return false;
		if(nt.getPrevY() <= y && nt.getLocY() >= y)return true;
		
		return false;
	}
	
	public int getY() {
		return y;
	}
	
	public void draw(Graphics2D g2) {
		g2.drawLine(left, y, right, y);
	}
}
