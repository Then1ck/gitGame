package camera;

import java.awt.Graphics2D;

import entities.Player;

public class Camera {
	private Player p1;
	private int offsetX, offsetY;
	private int DistToLeft=640, DistToTop=360;
	
	public Camera(Player P1) {
		p1 = P1;
		offsetX = DistToLeft;
		offsetY = DistToTop;
	}
	
	public void camChase() {
		System.out.println(p1.getLocX() + " " + p1.getLocY() + " " + offsetX + " " + offsetY);
		
		offsetX += ((DistToLeft - p1.getLocX()) - offsetX);
		offsetY += ((p1.getLocY() - DistToTop) - offsetY);
		System.out.println(offsetX + " " + offsetY);
	}
	
	public void  setCam(Graphics2D g2) {
		g2.translate(offsetX, offsetY);
	}
}
