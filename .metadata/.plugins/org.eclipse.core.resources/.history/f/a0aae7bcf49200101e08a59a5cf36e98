package controls;

public class Buttons {
	private boolean Pressed, Held, Released, toPress, toRelease;
	private int keyCode;
	
	public Buttons(int kC) {
		Pressed = false;
		Held = false;
		Released = false;
		toPress = true;
		toRelease = false;
		keyCode = kC;
	}
	
	public void buttonDown() {
		if(toPress) {
			Pressed = true;
			Held = true;
			toPress = false;
			toRelease = true;
		}
	}
}
