package entities;

import java.awt.Color;
import java.awt.Graphics2D;

public abstract class Entities {
	protected int velX, velY, prevX, prevY, locX, locY, width, height, yLimit, xLimit;
	protected boolean Grounded;
	
	public Entities(int LocX, int LocY, int Width, int Height) {
		velX = 0;
		velY = 0;
		Grounded = false;
		prevX = LocX;
		locX = LocX;
		prevY = LocY;
		locY = LocY;
		width = Width;
		height = Height;
		yLimit = 16;
		xLimit = 16;
	}
	
	public void draw(Graphics2D g2) {
		g2.setColor(Color.RED);
		g2.drawRect(locX, locY, width, height);
	}
	
	public int getLocX() {
		return locX;
	}
	
	public int getWidth() {
		return width;
	}
	
	public int getLocY() {
		return locY;
	}
	
	public int getHeight() {
		return height;
	}
	
	public int getPrevX() {
		return prevX;
	}
	
	public int getPrevY() {
		return prevY;
	}
	
	public int getPrevDown() {
		return prevY + height;
	}
	
	public int getDown() {
		return locY + height;
	}
	
	public void landing(int Y) {
		locY = Y-height;
		velY = 0;
		Grounded = true;
	}
	
	public void fall() {
		velY+=2;
	}
	
	public boolean getGrounded() {
		return Grounded;
	}
	
	public void setGrounded(boolean g) {
		Grounded = g;
	}
	
	public void setVelY(int nY) {
		velY = nY;
	}
	
	public void setLocX(int x) {
		locX = x;
	}
}
